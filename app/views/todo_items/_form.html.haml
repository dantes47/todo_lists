= form_for([@todo_item.todo_list, @todo_item]) do |f|
  - if @todo_item.errors.any?
    #error_explanation
      %h2
        = pluralize(@todo_item.errors.count, "error")
        prohibited this todo_item from being saved:
      %ul
        - @todo_item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :completed
    %br/
    = f.check_box :completed
  .field
    = f.label :completed_at
    %br/
    = f.datetime_select :completed_at
  .field
    = f.label :todo_list
    %br/
    = f.text_field :todo_list
  .actions
    = f.submit
