<div class="card-header d-flex justify-content-between">
  <div>
     <h5 class='m-0'><b><%= @todo_list.title %></b></h5>
     <p class='text-secondary m-0'><small><%= @todo_list.percent_complete %>% Complete (<%= @todo_list.completed_items %>/<%= @todo_list.total_items %> Todo Items)</small></p>
  </div>
  <div>
      <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: 'btn btn-danger' %>
  </div>
</div>
<div class="card-body">
      <div class="progress mb-3">
         <div class="progress-bar bg-info" role="progressbar" style="width: 25%" aria-valuenow="<%= @todo_list.percent_complete %>" aria-valuemin="0" aria-valuemax="100"></div>
      </div>

<ul class="list-group">
  <% @todo_list.todo_items.each do |todo_item| %>
    <% if todo_item.completed? %>
    <li class="list-group-item">
        <div class="d-flex justify-content-between">
            <span class='text-muted'>
              <em><%= todo_item.description %></em>
            </span>
            <%= link_to '#', class: 'btn btn-danger' do %>
              <i class="fas fa-times-circle"></i>
            <% end %>
        </div>
    </li>
    <% else %>
      <li class="list-group-item">
        <div class="d-flex justify-content-between">
            <span>
              <em><%= todo_item.description %></em>
            </span>
            <%= link_to '#', class: 'btn btn-info' do %>
              <i class="fas fa-check-circle"></i>
            <% end %>
        </div>
    </li>
    <% end %>
  <% end %>
</ul>
</div>


